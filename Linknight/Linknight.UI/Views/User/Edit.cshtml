@model Linknight.BL.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<h4 class="container text-center">Edit Account</h4>
<hr />

<section class="py-5">
    <div class="text-danger ml-3 font-weight-bold">@ViewBag.Message</div>

    <div class="container justify-content-center pt-3">
        <div class="row my-4 justify-content-center">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden asp-for="Id" class="form-control" />
                    <input hidden asp-for="FirstName" class="form-control" />
                    <input hidden asp-for="LastName" class="form-control" />
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>